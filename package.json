{
  "name": "juanmsl",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "portfolio:dev": "turbo dev --filter=portfolio",
    "lint": "turbo lint",
    "lint:fix": "yarn format && turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,js}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@juanmsl/eslint-config": "*",
    "@juanmsl/tsconfig": "*",
    "husky": "^9.0.11",
    "prettier": "^3.1.1",
    "turbo": "^1.12.2"
  },
  "engines": {
    "node": "^18"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
