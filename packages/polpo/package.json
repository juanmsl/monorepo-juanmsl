{
  "name": "polpo",
  "version": "0.1.7",
  "sideEffects": false,
  "license": "MIT",
  "type": "module",
  "imports": {
    "@polpo/ui": "./src",
    "@polpo/hooks": "./src/hooks",
    "@polpo/helpers": "./src/helpers"
  },
  "exports": {
    ".": null,
    "./ui": {
      "main": "./dist/ui.cjs",
      "module": "./dist/ui.js",
      "types": "./dist/ui.d.ts"
    },
    "./hooks": {
      "main": "./dist/hooks.cjs",
      "module": "./dist/hooks.js",
      "types": "./dist/hooks.d.ts"
    },
    "./helpers": {
      "main": "./dist/helpers.cjs",
      "module": "./dist/helpers.js",
      "types": "./dist/helpers.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "directory": "packages/polpo",
    "url": "git+https://github.com/juanmsl/monorepo-juanmsl.git"
  },
  "website": "https://ui.juanmsl.com/",
  "scripts": {
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "yarn lint --fix",
    "build:watch": "tsup --watch",
    "clean": "rm -rf ./dist",
    "build": "yarn clean && tsup",
    "publish-package": "yarn lint && yarn build && yarn publish --no-git-tag-version",
    "transform-svgs": "svg-to-react && yarn lint:fix",
    "dev": "storybook dev -p 6006 --quiet --debug hmr",
    "build-storybook": "storybook build",
    "debug": "storybook doctor"
  },
  "devDependencies": {
    "@juanmsl/eslint-config": "*",
    "@juanmsl/svg-to-react": "*",
    "@juanmsl/tsconfig": "*",
    "@storybook/addon-docs": "^9.0.9",
    "@storybook/addon-links": "^9.0.9",
    "@storybook/react-vite": "^9.0.9",
    "@types/color": "^3.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint": "^8.57.0",
    "eslint-config-custom": "*",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-storybook": "^9.0.9",
    "framer-motion": "^11.0.24",
    "react": "^18.2.0",
    "react-hook-form": "^7.44.2",
    "storybook": "^9.0.9",
    "styled-components": "^6.1.11",
    "tsconfig": "*",
    "tsup": "^8.0.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.8"
  },
  "peerDependencies": {
    "framer-motion": "^11.0.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.44.2",
    "styled-components": "^6.1.11"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.1.0",
    "axios": "^1.4.0",
    "color": "^4.2.3",
    "moment": "^2.30.1",
    "react-colorful": "^5.6.1",
    "use-eye-dropper": "^1.6.1",
    "yup": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
