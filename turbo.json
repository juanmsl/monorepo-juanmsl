{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**",
        "build/**"
      ]
    },
    "lint": {},
    "lint:fix": {},
    "css-tools": {
      "dependsOn": ["ui#build-lib:watch"],
      "cache": false,
      "persistent": true
    },
    "portfolio": {
      "dependsOn": ["ui#build-lib:watch"],
      "cache": false,
      "persistent": true
    },
    "landing-ui": {
      "dependsOn": ["ui#build-lib:watch"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
