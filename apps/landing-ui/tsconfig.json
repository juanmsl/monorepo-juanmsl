{
  "extends": "@juanmsl/tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@helpers": ["./src/helpers"],
      "@components/*": ["./src/components/*"],
      "@contexts": ["./src/contexts"],
      "@hooks": ["./src/hooks"],
      "@locales/*": ["./src/locales/*"],
      "@styles/*": ["./src/styles/*"],
    }
  }
}
