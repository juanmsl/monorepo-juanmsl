{
  "extends": "@juanmsl/tsconfig/react-library.json",
  "include": ["**/*.ts", "**/*.tsx", ".storybook/**/*.ts", ".storybook/**/*.tsx"],
  "exclude": ["dist", "lib", "node_modules", "tsup.config.cjs"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@polpo/ui": ["./"],
      "@polpo/helpers": ["./helpers"],
      "@polpo/hooks": ["./hooks"]
    }
  },
}
